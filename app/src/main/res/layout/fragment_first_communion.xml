<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment_first_communion">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="174dp"
                android:layout_height="139dp"
                android:layout_weight="1"
                android:src="@drawable/fcbasico" />

            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="paquete basico contiene: \n\n - servicio gastronomico \n - servicio logistica" />

                <Button
                    android:id="@+id/btnfcbasico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pide ya" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="174dp"
                android:layout_height="139dp"
                android:layout_weight="1"
                android:src="@drawable/bpro" />

            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="paquete pro contiene: \n\n - servicio gastronomico \n - servicio logistica \n - servicio musica" />

                <Button
                    android:id="@+id/btnfcpro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pide ya" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>